{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"lib": [
			"dom",
			"dom.iterable",
			"ESNext"
		],
		"rootDir": "./src",
		"outDir": "./app",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"preserveConstEnums": true,
		"strictFunctionTypes": false,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"importHelpers": true,
		"baseUrl": "./src"
	},
	"include": [
		"./src"
	]
}